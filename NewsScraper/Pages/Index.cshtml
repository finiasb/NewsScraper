@page
@model IndexModel

<section class="hero-modern">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                <span class="emoji">🚀</span>NewsHub
            </h1>
            <p class="hero-subtitle">Știri proaspete din toate domeniile, într-un singur loc</p>
            <div class="hero-badges">
                <span class="badge sport">⚽ Sport</span>
                <span class="badge tech">💻 Tech</span>
                <span class="badge politics">🏛️ Politică</span>
                <span class="badge world">🌍 Internațional</span>
            </div>
        </div>
        <div class="hero-visual">
            <div class="floating-cards">
                <div class="card-floating sport"></div>
                <div class="card-floating tech"></div>
                <div class="card-floating politics"></div>
                <div class="card-floating world"></div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <span>Explorează știrile</span>
        <div class="arrow"></div>
    </div>
</section>

<section class="featured-news">
    <div class="container">
        <h2 class="section-title">🔥 Știri de astăzi</h2>
        
        <div class="news-grid">
            <!-- Sport Highlight -->
            <div class="featured-card sport-card">
                <div class="card-image">
                    <img src="@(Model.FirstSportArticle?.ImageUrl ?? "/images/sport-bg.jpg")" alt="Sport">
                    <div class="category-tag">⚽ Sport</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.FirstSportArticle?.Title ?? "Știri sportive")</h3>
                    <p>Cele mai recente noutăți din lumea sportului</p>
                    <a href="/Sport" class="card-btn">Vezi toate știrile →</a>
                </div>
            </div>

            <!-- Tech Highlight -->
            <div class="featured-card tech-card">
                <div class="card-image">
                    <img src="@(Model.SecondTechArticle?.ImageUrl ?? "/images/tech-bg.jpg")" alt="Tech">
                    <div class="category-tag">💻 Tech</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.SecondTechArticle?.Title ?? "Noutăți tehnologice")</h3>
                    <p>Tehnologie, inovații și startup-uri</p>
                    <a href="/Tech" class="card-btn">Explorează tech →</a>
                </div>
            </div>

            <!-- Politics Highlight -->
            <div class="featured-card politics-card">
                <div class="card-image">
                    <img src="@(Model.PoliticsArticle?.ImageUrl ?? "/images/politics-bg.jpg")" alt="Politică">
                    <div class="category-tag">🏛️ Politică</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.PoliticsArticle?.Title ?? "Știri politice")</h3>
                    <p>Decizii, alegeri și analize politice</p>
                    <a href="/Politics" class="card-btn">Citește mai mult →</a>
                </div>
            </div>

            <!-- International Highlight -->
            <div class="featured-card world-card">
                <div class="card-image">
                    <img src="@(Model.InternationalArticle?.ImageUrl ?? "/images/world-bg.jpg")" alt="Internațional">
                    <div class="category-tag">🌍 Internațional</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.InternationalArticle?.Title ?? "Știri mondiale")</h3>
                    <p>Evenimente importante din întreaga lume</p>
                    <a href="/International" class="card-btn">Descoperă →</a>
                </div>
            </div>

            <!-- Tech Highlight -->
            <div class="featured-card tech-card">
                <div class="card-image">
                    <img src="@(Model.FirstTechArticle?.ImageUrl ?? "/images/tech-bg.jpg")" alt="Tech">
                    <div class="category-tag">💻 Tech</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.FirstTechArticle?.Title ?? "Noutăți tehnologice")</h3>
                    <p>Tehnologie, inovații și startup-uri</p>
                    <a href="/Tech" class="card-btn">Explorează tech →</a>
                </div>
            </div>

            <!-- Sport Highlight -->
            <div class="featured-card sport-card">
                <div class="card-image">
                    <img src="@(Model.SecondSportArticle?.ImageUrl ?? "/images/sport-bg.jpg")" alt="Sport">
                    <div class="category-tag">⚽ Sport</div>
                </div>
                <div class="card-content">
                    <h3>@(Model.SecondSportArticle?.Title ?? "Știri sportive")</h3>
                    <p>Cele mai recente noutăți din lumea sportului</p>
                    <a href="/Sport" class="card-btn">Vezi toate știrile →</a>
                </div>
            </div>
        </div>
    </div>
</section>



<style>
    :root {
        --sport-color: #E74C3C;
        --tech-color: #3498DB;
        --politics-color: #2ECC71;
        --world-color: #9B59B6;
        --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --background-light: #f8f9fa;
        --text-dark: #2c3e50;
        --shadow-soft: 0 8px 30px rgba(0,0,0,0.08);
    }

    .hero-modern {
        min-height: 100vh;
        background: var(--gradient-primary);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        max-width: 1200px;
        width: 90%;
        align-items: center;
    }

    .hero-title {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: white; 
    }

    .emoji {
        color: #FFD700; /* Doar racheta aurie */
        text-shadow: 0 0 15px rgba(255, 215, 0, 0.7);
        margin-right: 15px;
        display: inline-block;
        animation: rocketBounce 2s ease-in-out infinite;
    }



    .hero-subtitle {
        font-size: 1.4rem;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .hero-badges {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
    }

    .badge.sport { background: rgba(231, 76, 60, 0.2); }
    .badge.tech { background: rgba(52, 152, 219, 0.2); }
    .badge.politics { background: rgba(46, 204, 113, 0.2); }
    .badge.world { background: rgba(155, 89, 182, 0.2); }

    .floating-cards {
        position: relative;
        height: 300px;
    }

    .card-floating {
        position: absolute;
        width: 200px;
        height: 120px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        animation: float 6s ease-in-out infinite;
    }

    .card-floating.sport {
        background: rgba(231, 76, 60, 0.3);
        top: 20px;
        left: 0;
        animation-delay: 0s;
    }

    .card-floating.tech {
        background: rgba(52, 152, 219, 0.3);
        top: 80px;
        right: 0;
        animation-delay: 1.5s;
    }

    .card-floating.politics {
        background: rgba(46, 204, 113, 0.3);
        bottom: 40px;
        left: 40px;
        animation-delay: 3s;
    }

    .card-floating.world {
        background: rgba(155, 89, 182, 0.3);
        bottom: 20px;
        right: 60px;
        animation-delay: 4.5s;
    }

    .featured-news {
        padding: 5rem 0;
        background: var(--background-light);
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 3rem;
        color: var(--text-dark);
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .featured-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--shadow-soft);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .featured-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .card-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .featured-card:hover .card-image img {
        transform: scale(1.1);
    }

    .category-tag {
        position: absolute;
        top: 15px;
        left: 15px;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .sport-card .category-tag { background: var(--sport-color); }
    .tech-card .category-tag { background: var(--tech-color); }
    .politics-card .category-tag { background: var(--politics-color); }
    .world-card .category-tag { background: var(--world-color); }

    .card-content {
        padding: 1.5rem;
    }

    .card-content h3 {
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
        line-height: 1.4;
    }

    .card-content p {
        color: #666;
        margin-bottom: 1.5rem;
    }

    .card-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .sport-card .card-btn { background: var(--sport-color); color: white; }
    .tech-card .card-btn { background: var(--tech-color); color: white; }
    .politics-card .card-btn { background: var(--politics-color); color: white; }
    .world-card .card-btn { background: var(--world-color); color: white; }

    .card-btn:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    /* Stats Section */
    .stats-section {
        padding: 4rem 0;
        background: var(--gradient-secondary);
        color: white;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        text-align: center;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .features-section {
        padding: 5rem 0;
        background: white;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
    }

    .feature-item {
        text-align: center;
        padding: 2rem;
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .feature-item h4 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        color: var(--text-dark);
    }

    .feature-item p {
        color: #666;
        line-height: 1.6;
    }

    .scroll-indicator {
        position: absolute;
        bottom: 30px;
        text-align: center;
        color: white;
        opacity: 0.8;
    }

    .arrow {
        width: 30px;
        height: 30px;
        border-right: 2px solid white;
        border-bottom: 2px solid white;
        transform: rotate(45deg);
        margin: 10px auto;
        animation: bounce 2s infinite;
    }

    
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.featured-card');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        cards.forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(50px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
        });
    });
</script>